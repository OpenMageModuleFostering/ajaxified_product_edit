<?xml version="1.0"?><!--/** * @author    Marcin Frymark * @email     contact@alekseon.com * @company   Alekseon * @website   www.alekseon.com */--><config>    <modules>        <Alekseon_AjaxifiedProductEdit>            <version>0.1.1</version>        </Alekseon_AjaxifiedProductEdit>    </modules>    <global>        <blocks>            <alekseon_ajaxifiedProductEdit>                <class>Alekseon_AjaxifiedProductEdit_Block</class>            </alekseon_ajaxifiedProductEdit>        </blocks>        <models>            <alekseon_ajaxifiedProductEdit>                <class>Alekseon_AjaxifiedProductEdit_Model</class>                <resourceModel>alekseon_ajaxifiedproductedit_resource</resourceModel>            </alekseon_ajaxifiedProductEdit>            <alekseon_ajaxifiedproductedit_resource>                <class>Alekseon_AjaxifiedProductEdit_Model_Resource</class>				<entities>                    <gridview>                        <table>alekseon_ajaxifiedproductedit_gridview</table>                    </gridview>                    <gridview_attributeColumns>                        <table>alekseon_ajaxifiedproductedit_gridview_attributeColumns</table>                    </gridview_attributeColumns>                </entities>            </alekseon_ajaxifiedproductedit_resource>        </models>                  <helpers>            <alekseon_ajaxifiedProductEdit>                <class>Alekseon_AjaxifiedProductEdit_Helper</class>            </alekseon_ajaxifiedProductEdit>        </helpers>        <resources>            <alekseon_ajaxifiedproductedit_setup>                <setup>                    <module>Alekseon_AjaxifiedProductEdit</module>                    <class>Mage_Core_Model_Resource_Setup</class>                </setup>            </alekseon_ajaxifiedproductedit_setup>        </resources>              </global>    <adminhtml>        <layout>            <updates>                <alekseon_ajaxifiedProductEdit>                    <file>alekseon/ajaxifiedProductEdit.xml</file>                </alekseon_ajaxifiedProductEdit>            </updates>        </layout>          <events>            <controller_action_predispatch>                <observers>                    <alekseon_adminNotification>                        <class>alekseon_ajaxifiedProductEdit/alekseonAdminNotification_observer</class>                        <method>preDispatch</method>                    </alekseon_adminNotification>                </observers>            </controller_action_predispatch>        </events>    </adminhtml>    <admin>         <routers>            <adminhtml>                <args>                    <modules>                        <alekseon_ajaxifiedProductEdit before="Mage_Adminhtml">Alekseon_AjaxifiedProductEdit_Adminhtml</alekseon_ajaxifiedProductEdit>                    </modules>                </args>            </adminhtml>        </routers>    </admin>    <default>        <alekseon_adminNotification>            <general>                <enabled>1</enabled>                <frequency>12</frequency>            </general>        </alekseon_adminNotification>        <alekseon_ajaxifiedProductEdit>            <general>                <enabled>1</enabled>            </general>            <advanced>                <refresh_row>1</refresh_row>            </advanced>        </alekseon_ajaxifiedProductEdit>    </default></config>